{
    "load": {
        "dat_file": "H9_300V_20A_Primitive.dat",
        "h5_file": "H9_300V_20A_Primitive.h5",
        "overwrite": false,
        "absolute_path": false
    },
    "filter": {
        "tspan": [0, -1],
        "time_fraction": false,
        "downsample": 5,
        "overwrite": false,
        "fields": {
            "nn (m^-3)": "Neutral density",
            "un_z (m/s)": "Axial ion velocity"
        }
    },
    "global_plot": {
        "cmap": {
            "nn (m^-3)": "viridis",
            "un_z (m/s)": "jet"
        },
        "norm": {
            "nn (m^-3)": "log",
            "un_z (m/s)": "linear"
        },
        "animate": true,
        "subplot_size_in": [4, 3],
        "scheme": "dark",
        "color": "r",
        "animate_opts": {
            "frame_skip": 2,
            "dpi": 150,
            "blit": true,
            "fps": 20
        },
        "exclude": ["un_z (m/s)"]
    },
    "plot_2d": {
        "labels": {
            "nn (m^-3)": "New neutral density label"
        },
        "filename": "2d-output-plots-nn.pdf",
        "scheme": "white",
        "animate": false
    },
    "plot_centerline": {
        "slice_opts": {
            "zlim": 2,
            "num_points": 100
        },
        "labels": {
            "un_z (m/s)": "New ion velocity label"
        },
        "filename": "centerline-plots.pdf",
        "animate_opts": {
            "fps": 10,
            "blit": false
        },
        "color": "g"
    },
    "plot_metrics": {
        "metrics": ["thrust", "discharge_current", "beam_current"],
        "grid": [1, 2],
        "labels": {
            "thrust": "My thrust (N)",
            "discharge_current": "$I_d$"
        },
        "share_plot": {
            "Current (A)": ["discharge_current", "beam_current"]
        },
        "filename": "metrics-plot.pdf"
    }
}